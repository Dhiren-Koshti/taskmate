{
  "name": "taskmate",
  "version": "0.1.0",
  "description": "A simple secure taskmate app built with React and Electron",
  "author": "Koshti Dhiren Prakashbhai",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "backend": "cd backend && nodemon index.js",
    "both": "concurrently \"npm run dev\" \"npm run backend\"",
    "electron": "cross-env ELECTRON_DEV=true electron .",
    "dist": "npm run build && electron-builder",
    "postinstall": "cd backend && npm install --production"
  },
  "build": {
    "appId": "com.taskmate.app",
    "productName": "Taskmate",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "backend/node_modules",
        "to": "backend/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/taskmate.ico"
    },
    "extends": null,
    "asar": false,
    "extraMetadata": {
      "main": "main.js"
    }
  },
  "dependencies": {
    "@redux-devtools/extension": "^3.3.0",
    "@reduxjs/toolkit": "^2.6.0",
    "concurrently": "^9.1.2",
    "lucide-react": "^0.477.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.2.0",
    "redux-thunk": "^3.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.24",
    "cross-env": "^7.0.3",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^6.2.0"
  }
}
